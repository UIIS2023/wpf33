<Window x:Class="Apoteka.Forme.Dobavljac"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Apoteka.Forme"
        mc:Ignorable="d"
        Title="Dobavljac" Height="200" Width="300">
    <Grid>
        <Label Content="Naziv :" HorizontalAlignment="Left" Margin="20,18,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Kontakt :" HorizontalAlignment="Left" Margin="20,57,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="txtNaziv" HorizontalAlignment="Left" Margin="80,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtKontakt" HorizontalAlignment="Left" Margin="80,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSacuvaj" Content="Sacuvaj" HorizontalAlignment="Left" Margin="20,139,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.005,0.603" Height="35" Width="75" Click="btnSacuvaj_Click"/>
        <Button x:Name="btnOtkazi" Content="Otkazi" HorizontalAlignment="Left" Margin="210,139,0,0" VerticalAlignment="Top" Height="35" Width="75" Click="btnOtkazi_Click"/>
    </Grid>
</Window>
